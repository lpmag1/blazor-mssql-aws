{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The template used to create an ECS Service from the ECS Console.",
  "Parameters": {
    "ECSClusterName": {
      "Type": "String",
      "Default": "blazor-cluster"
    },
    "ECSServiceName": {
      "Type": "String",
      "Default": "blazor-ecs-task-def-service"
    },
    "SecurityGroupName": {
      "Type": "CommaDelimitedList",
      "Default": "blazor-security-group"
    },
    "SubnetIDs": {
      "Type": "CommaDelimitedList",
      "Default": "subnet-098de725fb3fba6bd,subnet-0f7749f3083b06d45,subnet-03143c4b057448df1,subnet-0225e93d6571dc8f3"
    },
    "VpcID": {
      "Type": "String",
      "Default": "vpc-0ae93821c8e5d52d8"
    },
    "LoadBalancerName": {
      "Type": "String",
      "Default": ""
    }
  },
  "Resources": {
    "ECSService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "Cluster": "blazor-cluster",
        "TaskDefinition": "arn:aws:ecs:us-west-2:259779557393:task-definition/blazor-ecs-task-def:1",
        "LaunchType": "FARGATE",
        "ServiceName": "blazor-ecs-task-def-service",
        "SchedulingStrategy": "REPLICA",
        "DesiredCount": 3,
        "AvailabilityZoneRebalancing": "ENABLED",
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "AssignPublicIp": "ENABLED",
            "SecurityGroups": [
              {
                "Ref": "SecurityGroup"
              }
            ],
            "Subnets": {
              "Ref": "SubnetIDs"
            }
          }
        },
        "PlatformVersion": "LATEST",
        "DeploymentConfiguration": {
          "DeploymentCircuitBreaker": {
            "Enable": true,
            "Rollback": true
          },
          "Strategy": "ROLLING",
          "MaximumPercent": 200,
          "MinimumHealthyPercent": 100
        },
        "DeploymentController": {
          "Type": "ECS"
        },
        "ServiceConnectConfiguration": {
          "Enabled": false
        },
        "Tags": [],
        "EnableECSManagedTags": true,
        "EnableExecuteCommand": false
      }
    },
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Created in ECS Console",
        "GroupName": "blazor-security-group",
        "VpcId": "vpc-0ae93821c8e5d52d8",
        "SecurityGroupIngress": [
          {
            "FromPort": 80,
            "ToPort": 80,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "FromPort": 80,
            "ToPort": 80,
            "IpProtocol": "tcp",
            "CidrIpv6": "::/0"
          }
        ]
      }
    }
  },
  "Outputs": {
    "ClusterName": {
      "Description": "The cluster used to create the service.",
      "Value": {
        "Ref": "ECSClusterName"
      }
    },
    "ECSService": {
      "Description": "The created service.",
      "Value": {
        "Ref": "ECSService"
      }
    }
  }
}